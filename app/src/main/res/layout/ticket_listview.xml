<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView android:id="@+id/ticket_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧目名称:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上映时间:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导演:" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:id="@+id/ticket_play_name"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <TextView android:id="@+id/ticket_play_time"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/ticket_play_score"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/ticket_play_type"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />
            <TextView android:id="@+id/ticket_play_director"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/buy"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:background="#66B3FF"
        android:gravity="center"
        android:text="购票"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

</LinearLayout>