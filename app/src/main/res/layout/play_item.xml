<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/play_item_container"
    android:layout_margin="8dp"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="75dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/play_item_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="88dp"
        android:text="剧目名称:哈利波特"
        android:textColor="@android:color/black"
        android:id="@+id/play_item_t_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="88dp"
        android:layout_marginTop="7.5dp"
        android:text="导演:哈利波特"
        android:gravity="center_vertical"
        android:id="@+id/play_item_t_director"
        android:layout_below="@id/play_item_t_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="88dp"
        android:layout_marginTop="2.5dp"
        android:gravity="center_vertical"
        android:text="主演:哈利波特"
        android:id="@+id/play_item_t_actor"
        android:layout_below="@id/play_item_t_director"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/play_item_t_score"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="9.8"
        android:layout_marginRight="16dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:id="@+id/play_item_check"/>

</RelativeLayout>